{
  "apps": [
    {
      "name": "vue-element-admin",
      "script": "serve",
      "env": {
        "PM2_SERVE_PORT": 3015,
        "PM2_SERVE_PATH": "./%23",
        "COMMON_VARIABLE": "true"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "root",
      "host": ["120.78.223.81"],
      "port": "22",
      "ref": "origin/master",
      "repo": "git@github.com:junlintianxiazhifulinzhongguo/vue-element-admin.git",
      "path": "/usr/share/nginx/vue-element-admin/production",
      "ssh_options": "StrictHostKeyChecking=no",
      "pre-deploy" : "git fetch --all",
      "post-deploy":"npm install --registry=https://registry.npm.taobao.org && npm run build:prod && cd /usr/share/nginx/vue-element-admin/production/current/ &&rm -rf %23 && mv dist %23 && pm2 startOrRestart ecosystem.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}